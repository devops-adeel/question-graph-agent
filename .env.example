# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Groq Configuration (optional)
GROQ_API_KEY=your-groq-api-key-here

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j

# Graphiti Configuration
GRAPHITI_API_KEY=your-graphiti-api-key-here
GRAPHITI_ENDPOINT=http://localhost:8000
GRAPHITI_ENABLE_CACHE=true
GRAPHITI_CACHE_TTL=3600

# Logfire Configuration (optional)
LOGFIRE_TOKEN=your-logfire-token-here
LOGFIRE_PROJECT_NAME=question-graph-agent

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=INFO

# Feature Flags
ENABLE_GRAPHITI_MEMORY=true
ENABLE_ASYNC_PROCESSING=true
ENABLE_NLP_MODELS=false

# Performance Settings
MAX_WORKERS=4
BATCH_SIZE=100
REQUEST_TIMEOUT=30
EXTRACTION_TIMEOUT=30

# Data Paths
DATA_DIR=./data
CACHE_DIR=./cache
LOG_DIR=./logs